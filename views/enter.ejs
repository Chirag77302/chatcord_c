<body>

    <div class="container" style="height: 100vh;">
        <div class="row align-items-center justify-content-center" style="height: inherit;">
          
          <div class="col-md-6 row align-items-center justify-content-center" id = "index-page-body" style="background-color: #667aff; height: 80%;">
            <div class="col-md-12 enter-box row align-items-center justify-content-center" style="height: 100%; width: 100%;">
                
                <div class="entry-box col-md-10" style="width: inherit;">
                    <header class="join-header">
                        <h1 class="mb-5" style="text-align: center;"><i class="fas fa-smile"></i> CHATAPP</h1>
                    </header>

                    <div style="background-color: #7386ff; height: inherit;" class="p-1">
                        <div class="m-4">
                            <div class="label">
                                <h3>Username</h3>
                            </div>
                            <div class="input-box">
                                <input id="userName" type="text" name="name" placeholder="Username" style="width: 100%;" autofocus />
                            </div>
                        </div>

                        <div class="m-4">
                            <div class="label">
                                <h3>Room Name</h3>
                            </div>
                            <div class="input-box">
                                <input id="roomName" type="text" name="room" placeholder="Roomname" style="width: 100%;" />
                            </div>
                        </div>
                        
                        <div class="submit-button-div m-3">
                            <button type="button" class="btn btn-light" id="join-button" onclick="joinRoom()" style="width: 100%;" >Join Chat</button>
                        </div>
                    </div>

                </div>

            </div>
          </div>
          
        </div>
      </div>

